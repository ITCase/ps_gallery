{% extends "pyramid_sacrud_gallery/base.jinja2" %}

{% block content %}
    <div class="gallery">
        <div class="gallery-nav">
            <div class="gallery-nav__item">
                <a href="{{ request.route_url('sacrud_gallery_list') }}"  class="gallery-nav__item-link">List of galleries</a>
            </div>
            <div class="gallery-nav__separator">>></div>
            <div class="gallery-nav__item">{{ gallery.name }}</div>
        </div>
        <div class="gallery-title">Redefine me in "pyramid_sacrud_gallery/gallery.jinja2"</div>
        <div class="gallery-detail">
            <div class="gallery-detail-title">Images from gallery "{{ gallery.name }}":</div>
            <div class="gallery-detail-list">
                {% for image in gallery.items %}
                    <div class="gallery-detail-list__item">
                        <a href="{{ request.route_url('sacrud_gallery_item_view', pk=gallery.get_val_pk(), image=image.get_val_pk()) }}" class="gallery-detail-list__item-link">
                            <img src="{{ image.path }}" alt="{{ image.description }}" class="gallery-detail-list__item-image">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock content %}